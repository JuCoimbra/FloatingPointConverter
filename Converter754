def posi_exponent(number):
	res = number
	exp = 127
	while(res >= 2):
		res = res / 2
		exp += 1
	exponent = bin(exp)
	first, fraction = str(res).split(".")
	value = "0." + fraction
	while(float(value) != 0.0):
		value = float(value)*2
		first, fraction = str(value).split(".")
		mantissa += first
		value = "0." + fraction
	result = str(exponent) + str(mantissa)
	return result

def neg_exponent(number):
	res = number
	exp = 127
	while(res < 1):
		res = res*2
		exp -= 1
	exponent = bin(exp)
	first, fraction = str(res).split(".")
	value = "0." + fraction
	while(float(value) != 0.0):
		value = float(value)*2
		first, fraction = str(value).split(".")
		mantissa += first
		value = "0." + fraction
	result = str(exponent) + str(mantissa)
	return result

def exponent_test(number):
	if number < 1 and number > 0:
		convert = "0" + neg_exponent(number)
	elif number < 0:
		convert = "1" + neg_exponent(number)
	else:
		convert = "0" + posi_exponent(number)
	return convert


